
gris_oscuro = #333333
gris_claro= #818181
rojo = #BD255B


a 
	text-decoration none
body
	font-family 'Varela Round', sans-serif;
	font-size 16px

figure
	margin 0
img
	vertical-align top
//buttons
	.button-menu
		position absolute
		top 50%
		margin-top -10px
		color:gris_oscuro
.container
	padding 1.4rem
	font-size 0
.action
	color white
	margin-right .5em
	font-size 1.2em
	&:last-child
		margin-right 0 
.actions
	position absolute
	bottom 0 
	left 0
	right 0
	background rgba(black,.3)
.border-bottom
	border-bottom 1px solid gris_claro
.name
	color gris_oscuro
.menu
	display none
.relative
	position relative
.padding
	padding 1em
.progress
	margin 1em 0
	.total
		height 5px
		width 100%
		background gris_claro
		border-radius 5px
		.state
			height 5px
			background rojo
			border-radius 5px
			width 30%
			position relative
		.circle
			width 10px
			height 10px
			background gris_oscuro
			border-radius 50%
			position absolute
			right 0
			top -2px
.header
	height 3.5em
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em
.autor
	color gris_claro
.center-block
		margin 0 auto
.center-text
	text-align center
.rigtht-text
	text-align right
.relative 
	position relative
.song
	width 8rem
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-left 1em
	margin-bottom 1em
	text-align left
	width 8rem
	
	&nth-child(even)
		margin-right 0
	p
		margin .5em 0
.playing
	&.small
		width 20em
		
	
	
	